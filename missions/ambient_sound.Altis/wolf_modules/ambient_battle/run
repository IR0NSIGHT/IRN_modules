    {
        _player = _x;
        {
            _distanceToCamp = _player distance _x;
            if (_distanceToCamp < 2000) then {
                systemChat str ["player",_player,"triggered",_x];
            };
        } foreach [_camp1Pos,_camp2Pos,_camp_n+1Pos];
    } foreach allPlayers
    sleep 2;
}